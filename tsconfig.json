{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration":false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "pretty": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitUseStrict": false,
    "typeRoots": [
     "./node_modules/@types"
   ],
   "types":[
     "core-js",
     "node"
   ]
  },
  "files":[
    "app/app.module.ts"
  ],

  "include":[
    "app/**/*"
  ],

  "exclude":[
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "angularCompilerOptions":{
    "genDir":".",
    "debug":true,
    "skipMetadataEmit":true
  }
}
